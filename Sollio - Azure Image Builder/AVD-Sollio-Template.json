{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    
    "variables": {
    },


    "resources": [
      {
        "name": "Sollio-AIB-PROD",
        "type": "Microsoft.VirtualMachineImages/imageTemplates",
        "apiVersion": "2020-02-14",
        "location": "eastus2",
        "dependsOn": [],
        "tags": {
            "imagebuilderTemplate": "AzureImageBuilderSIG",
            "userIdentity": "enabled"
                },
            "identity": {
                "type": "UserAssigned",
                        "userAssignedIdentities": {
                        "/subscriptions/03416f69-f4a4-4dc5-ad36-f399cb3dcc1b/resourcegroups/RG-AZUREIMAGEBUILDER/providers/Microsoft.ManagedIdentity/userAssignedIdentities/SollioAIB-PROD": {}
                            
                    }
                    },
        
        "properties": {
            "buildTimeoutInMinutes" : 120,

            "vmProfile": 
                    {
                    "vmSize": "Standard_D2_v2",
                    "osDiskSizeGB": 127
                    },
        
            "source": {
                "type": "PlatformImage",
                    "publisher": "MicrosoftWindowsDesktop",
                    "offer": "windows-10",
                    "sku": "21h1-evd",
                    "version": "latest"
            },
            "customize": [
                    {
                        "type": "PowerShell",
                        "name": "OptimizeOS",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/danielsollondon/azvmimagebuilder/master/solutions/14_Building_Images_WVD/1_Optimize_OS_for_WVD.ps1"
                    },
                    {
                        "type": "WindowsRestart",
                        "restartCheckCommand": "write-host 'restarting post Optimizations'",
                        "restartTimeout": "5m"
                    },
                    {
                        "type": "PowerShell",
                        "name": "01_Install-LanguagePack-French",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/mabrochu-helpox/Azure-Sollio/main/Sollio%20-%20Azure%20Image%20Builder/01_Install-LanguagePack-French.ps1"
                    },
                    {
                        "type": "WindowsRestart",
                        "restartCheckCommand": "write-host 'restarting post Optimizations'",
                        "restartTimeout": "5m"
                    },
                    {
                        "type": "PowerShell",
                        "name": "02_Install-Office365-French",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/mabrochu-helpox/Azure-Sollio/main/Sollio%20-%20Azure%20Image%20Builder/02_Install-Office365-French.ps1"
                    },
                    {
                        "type": "WindowsRestart",
                        "restartCheckCommand": "write-host 'restarting post Optimizations'",
                        "restartTimeout": "5m"
                    },
                    {
                        "type": "WindowsUpdate",
                        "searchCriteria": "IsInstalled=0",
                        "filters": [
                            "exclude:$_.Title -like '*Preview*'",
                            "include:$true"
                                    ],
                        "updateLimit": 40
                    },
                    {
                        "type": "PowerShell",
                        "runElevated": true,
                        "name": "DeprovisioningScript",
                        "inline": [
                        "((Get-Content -path C:\\DeprovisioningScript.ps1 -Raw) -replace 'Sysprep.exe /oobe /generalize /quiet /quit','Sysprep.exe /oobe /generalize /quit /mode:vm' ) | Set-Content -Path C:\\DeprovisioningScript.ps1"
                        ]
                    }
            ],
            "distribute": 
            [
                {   
                    "type": "SharedImage",
                    "galleryImageId": "/subscriptions/03416f69-f4a4-4dc5-ad36-f399cb3dcc1b/resourceGroups/RG-AZUREIMAGEBUILDER/providers/Microsoft.Compute/galleries/SollioWVDImages/images/Sollio-Prod-WVD",
                    "runOutputName": "sigOutput",
                    "artifactTags": {
                        "source": "wvd10",
                        "baseosimg": "windows10"
                    },
                    "replicationRegions": [
                      "eastus2"

                    ]
                }
            ]
            }
        }

    
    ]
}    














