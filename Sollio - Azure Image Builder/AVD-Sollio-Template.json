{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "imageTemplateName": {
        "type": "string"
        },
        "api-version": {
          "type": "string"
        },
        "svclocation": {
            "type": "string"
        }
    },
    
    "variables": {
    },


    "resources": [
      {
        "name": "[parameters('imageTemplateName')]",
        "type": "Microsoft.VirtualMachineImages/imageTemplates",
        "apiVersion": "[parameters('api-version')]",
        "location": "[parameters('svclocation')]",
        "dependsOn": [],
        "tags": {
            "imagebuilderTemplate": "AzureImageBuilderSIG",
            "userIdentity": "enabled"
                },
            "identity": {
                "type": "UserAssigned",
                        "userAssignedIdentities": {
                        "/subscriptions/03416f69-f4a4-4dc5-ad36-f399cb3dcc1b/resourceGroups/RG-AZUREIMAGEBUILDER/providers/Microsoft.ManagedIdentity/userAssignedIdentities/MI-AzureImageBuilder": {}
                            
                    }
                    },
        
        "properties": {
            "buildTimeoutInMinutes" : 120,

            "vmProfile": 
                    {
                    "vmSize": "Standard_D2_v2",
                    "osDiskSizeGB": 127
                    },
        
            "source": {
                "type": "ManagedImage",
                "imageId": "/subscriptions/03416f69-f4a4-4dc5-ad36-f399cb3dcc1b/resourcegroups/RG-AZUREIMAGEBUILDER/providers/Microsoft.Compute/images/GOLDEN-21H2-FRENCH-V1-image-20220412"
            },
            "customize": [
                    {
                        "type": "PowerShell",
                        "name": "NetFramework",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/mabrochu-helpox/Azure-Sollio/main/Sollio%20-%20Azure%20Image%20Builder/03_Install-NetFramework.ps1"
                    },
                    {
                        "type": "PowerShell",
                        "name": "MMC Snapin",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/mabrochu-helpox/Azure-Sollio/main/Sollio%20-%20Azure%20Image%20Builder/04_Install-MMC-Snap-In.ps1"
                    },
                    {
                        "type": "PowerShell",
                        "name": "DatabaseEngine",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/mabrochu-helpox/Azure-Sollio/main/Sollio%20-%20Azure%20Image%20Builder/05_Install-DatabaseEngine.ps1"
                    },
                    {
                        "type": "PowerShell",
                        "name": "Fidelio",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/mabrochu-helpox/Azure-Sollio/main/Sollio%20-%20Azure%20Image%20Builder/06_Install-Fidelio.ps1"
                    },
                    {
                        "type": "PowerShell",
                        "name": "GhostScript",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/mabrochu-helpox/Azure-Sollio/main/Sollio%20-%20Azure%20Image%20Builder/07_Install-GhostScript.ps1"
                    },
                    {
                        "type": "PowerShell",
                        "name": "CutePDF",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/mabrochu-helpox/Azure-Sollio/main/Sollio%20-%20Azure%20Image%20Builder/08_Install-CutePDF.ps1"
                    },
                    {
                        "type": "PowerShell",
                        "name": "Foxit Reader",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/mabrochu-helpox/Azure-Sollio/main/Sollio%20-%20Azure%20Image%20Builder/09_Install-FoxitReader.ps1"
                    },
                    {
                        "type": "WindowsRestart",
                        "restartCheckCommand": "write-host 'restarting post Optimizations'",
                        "restartTimeout": "5m"
                    },
                    {
                        "type": "WindowsUpdate",
                        "searchCriteria": "IsInstalled=0",
                        "filters": [
                            "exclude:$_.Title -like '*Preview*'",
                            "include:$true"
                                    ],
                        "updateLimit": 40
                    }

            ],
            "distribute": 
            [
                {   
                    "type": "SharedImage",
                    "galleryImageId": "/subscriptions/03416f69-f4a4-4dc5-ad36-f399cb3dcc1b/resourceGroups/RG-AZUREIMAGEBUILDER/providers/Microsoft.Compute/galleries/AvdImageGallery/images/AVD-Win10",
                    "runOutputName": "sigOutput",
                    "artifactTags": {
                        "source": "wvd10",
                        "baseosimg": "windows10"
                    },
                    "replicationRegions": [
                      "eastus2"

                    ]
                }
            ]
            }
        }

    
    ]
}    







